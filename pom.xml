<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.codelibs.fess</groupId>
  <artifactId>fess-db</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>Fess DB Project</name>
  <description>Fess Database Library</description>
  <url>https://github.com/codelibs/fess-db</url>
  <inceptionYear>2009</inceptionYear>
  <licenses>
    <license>
      <name>The Apache Software License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <organization>
    <name>CodeLibs</name>
    <url>http://www.codelibs.org/</url>
  </organization>
  <issueManagement>
    <system>GitHub</system>
    <url>https://github.com/codelibs/fess-db/issues</url>
  </issueManagement>
  <scm>
    <connection>scm:git:git@github.com:codelibs/fess-db.git</connection>
    <developerConnection>scm:git:git@github.com:codelibs/fess-db.git</developerConnection>
    <url>git@github.com:codelibs/s2robot.git</url>
  </scm>
  <parent>
    <groupId>org.sonatype.oss</groupId>
    <artifactId>oss-parent</artifactId>
    <version>9</version>
  </parent>
  <modules>
    <module>fess-db-h2</module>
    <module>fess-db-mysql</module>
  </modules>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <h2.version>1.4.181</h2.version>
    <mysql.version>5.1.32</mysql.version>
    <oracle.version>11.2.0.3</oracle.version>
    <dbflute.version>1.1.0-sp1</dbflute.version>
    <seasar.version>2.4.46</seasar.version>
    <utflute.version>0.5.0-RC4</utflute.version>
  </properties>
  <repositories>
    <repository>
      <id>codelibs.org</id>
      <name>CodeLibs Repository</name>
      <url>http://maven.codelibs.org/</url>
    </repository>
    <repository>
      <name>oss.sonatype.org</name>
      <id>oss.sonatype.org</id>
      <url>http://oss.sonatype.org/content/groups/public/</url>
    </repository>
    <!-- TODO: remove -->
    <repository>
      <id>maven.seasar.org</id>
      <name>The Seasar Foundation Maven2 Repository</name>
      <url>http://maven.seasar.org/maven2/</url>
    </repository>
  </repositories>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-compiler-plugin</artifactId>
          <version>3.2</version>
          <configuration>
            <source>1.8</source>
            <target>1.8</target>
            <encoding>UTF-8</encoding>
          </configuration>
        </plugin>
        <plugin>
          <artifactId>maven-source-plugin</artifactId>
          <version>2.4</version>
          <executions>
            <execution>
              <id>source-jar</id>
              <phase>package</phase>
              <goals>
                <goal>jar</goal>
              </goals>
            </execution>
          </executions>
        </plugin>
        <plugin>
          <artifactId>maven-jar-plugin</artifactId>
          <version>2.5</version>
          <configuration>
            <excludes>
              <exclude>**/exbhv/**</exclude>
              <exclude>**/exentity/**</exclude>
            </excludes>
          </configuration>
        </plugin>
        <plugin>
          <artifactId>maven-surefire-plugin</artifactId>
          <version>2.18</version>
        </plugin>
        <plugin>
          <artifactId>maven-deploy-plugin</artifactId>
          <version>2.8.2</version>
          <configuration>
            <updateReleaseInfo>true</updateReleaseInfo>
          </configuration>
        </plugin>
        <plugin>
          <artifactId>maven-javadoc-plugin</artifactId>
          <version>2.10.1</version>
          <configuration>
            <encoding>UTF-8</encoding>
            <docencoding>UTF-8</docencoding>
            <charset>UTF-8</charset>
            <links>
              <link>http://docs.oracle.com/javase/8/docs/api/</link>
            </links>
          </configuration>
        </plugin>
        <plugin>
          <groupId>com.google.code.maven-license-plugin</groupId>
          <artifactId>maven-license-plugin</artifactId>
          <version>1.4.0</version>
          <configuration>
            <header>http://www.codelibs.org/assets/license/header.txt</header>
            <includes>
              <include>src/**/*.java</include>
            </includes>
            <encoding>UTF-8</encoding>
            <headerDefinitions>
              <headerDefinition>http://www.codelibs.org/assets/license/header-definition.xml</headerDefinition>
            </headerDefinitions>
          </configuration>
        </plugin>
        <plugin>
          <groupId>org.dbflute</groupId>
          <artifactId>dbflute-maven-plugin</artifactId>
          <version>1.1.0-RC2</version>
        </plugin>
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>sql-maven-plugin</artifactId>
          <version>1.2</version>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.seasar.container</groupId>
      <artifactId>s2-tiger</artifactId>
      <version>${seasar.version}</version>
    </dependency>
    <dependency>
      <groupId>org.dbflute</groupId>
      <artifactId>dbflute-runtime</artifactId>
      <version>${dbflute.version}</version>
    </dependency>
  </dependencies>
</project>
